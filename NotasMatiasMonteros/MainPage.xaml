<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotasMatiasMonteros.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="main.png"
                HeightRequest="185"
                 />
            <Label
                x:Name="LabelArchivo"
                Text=""
                FontSize="Medium"
                />

            <Editor
                x:Name="TxtArchivo"
                Placeholder="Ingrese el texto para el archivo.."
                />

            <Button
                x:Name="BtnGuardarArchivo"
                Text="Guardar Archivo"
                Clicked="BtnGuardarArchivo_Clicked"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
